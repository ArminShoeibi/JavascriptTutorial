
    <script>

        /*
         * The while statement creates a loop that executes a specified 
           statement as long as the test condition evaluates to true.
           The condition is evaluated before executing the statement.
         
         
         */

        let numberTen = 10; 

        while (numberTen >= 1) {
           
            console.log(numberTen);
            numberTen--;
        }


        var n = 0;
        var x = 0;

        while (n < 3) {
            n++;
            x += n;
        }
        console.log('n', n);
        console.log('x', x);

    </script>